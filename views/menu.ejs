<!-- Панель меню -->
<div class="menu">
    <div id="left-menu-elements">
        <a href="/">
            <img src="/images/logo.png" alt="Dota 2 Logo" style="width: 90px;  height: 50px;"> 
            <a href="/">Dota 2 - Heroes</a>
        </a>
    </div>
    <div id="right-menu-elements">
        <a href="/feedback">
            Обратная связь
        </a>
        <% if (session.user && session.user.role === "admin") { %>
            <!-- Если пользователь аутентифицирован и его роль - админ, показываем ссылку на панель администратора -->
            <a href="/admin">Панель администратора</a>
            <!-- Кнопка для выхода -->
            <a href="/logout">Выйти</a>
        <% } else if (session.user && session.user.role === "user") { %>
            <!-- Кнопка для выхода -->
            <a href="/logout">Выйти</a>
        <% } else { %>
            <!-- Если пользователь не аутентифицирован, показываем кнопку для входа/регистрации -->
            <button id="log-reg-btn" onclick="location.href = '/auth'">Войти/зарегистрироваться</button>
        <% } %>
    </div>
</div>